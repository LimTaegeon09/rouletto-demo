<html lang="kr">

<head>
    <link rel="icon" href="./favicon.ico" />
    <meta charset="utf-8" />
    <title>
        <%=title%>
    </title>
    <meta name="viewport"
        content="width=device-width,user-scalable=no,initial-scale=1,minimum-scale=1,maximum-scale=1,minimal-ui=true" />
    <!--"width=device-width, initial-scale=1, maximum-scale=2, minimum-scale=1, user-scalable=yes"-->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="full-screen" content="yes" />
    <meta name="screen-orientation" content="portrait" />
    <meta name="x5-fullscreen" content="true" />
    <meta name="360-fullscreen" content="true" />
    <meta name="renderer" content="webkit" />
    <meta name="force-rendering" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <style>
        * {
            margin: 0 auto;
            padding: 0;
            outline: none;
            border: none;
            /* zoom: 50%; */
        }

        body {
            -ms-overflow-style: none;
            background-color: black;
            zoom: 1;
        }

        ::-webkit-scrollbar {
            display: none;
        }

        #hide {
            display: none;
        }
    </style>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
    <div id="content" class="content">
        <div class="contentWrap">
            <div id="GameDiv" class="wrapper" style="position: relative; overflow: hidden;">
                <div id="Cocos3dGameContainer">
                    <canvas id="GameCanvas" tabindex="-1" style="background-color: '';">
                    </canvas>
                </div>
            </div>
        </div>
    </div>
    <span id="hide">
        <%- include(cocosToolBar, {config: config}) %>
            <%- include(cocosTemplate, {}) %>
                <div id="splash">
                    <div class="progress-bar stripes"><span></span></div>
                </div>
                <div id="bulletin">
                    <div id="sceneIsEmpty" class="inner">
                        <%=tip_sceneIsEmpty%>
                    </div>
                </div>
                <div class="error" id="error">
                    <div class="title">Error <i>(Please open the console to see detailed errors)</i></div>
                    <div class="error-main"></div>
                    <div class="error-stack"></div>
                </div>
    </span>
    <script>
        window.devicePixelRatio = 1;

        const default_size = {
            w: 1920,
            h: 1080
        };

        //////////////////////////////////////////////////////////////////////////

        window.onresize = function () {
            let resizing_width = (default_size.w / default_size.h) * window.innerHeight;
            let resizing_height = window.innerHeight;
            if (resizing_width > window.innerWidth) {
                resizing_width = window.innerWidth;
                resizing_height = (default_size.h / default_size.w) * resizing_width;
            }
            document.getElementById('GameDiv').style.width = resizing_width.toString();
            document.getElementById('GameDiv').style.height = resizing_height.toString();
            document.getElementById('GameCanvas').style.width = resizing_width.toString();
            document.getElementById('GameCanvas').style.height = resizing_height.toString();
        };
    </script>
</body>

</html>